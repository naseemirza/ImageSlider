<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.naseem.restaurent.SignUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:id="@+id/editTextnm" />

    <TextView
        android:text="Create An Account"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView2" />


    <TextView
        android:text="Login Here"
        android:textSize="20dp"
        android:clickable="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_sin"
       android:textAlignment="center"

        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/editTextemail"
        android:layout_below="@+id/editTextnm"
        android:layout_alignStart="@+id/editTextnm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
       android:hint="Mobile Number"
        android:ems="10"
        android:id="@+id/editTextmobile"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"

        android:layout_marginTop="34dp"
        android:id="@+id/editTextpass"
        android:layout_below="@+id/editTextmobile"
        android:layout_alignStart="@+id/editTextmobile" />

    <Button
        android:text="Sign Up"
        android:textSize="15dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_signup"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/editTextpass"
        android:layout_alignStart="@+id/editTextpass"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Already Have An Account ?"
    android:textSize="20dp"
    android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button_signup"
        android:layout_alignEnd="@+id/editTextemail" />
</RelativeLayout>
